<h1><%= @article.title %></h1>

<p><%= @article.body %></p>
<ul>
    <li><%= link_to "Edit", edit_article_path%></li>
    <li><%= link_to "Destroy", article_path, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%></li>
</ul>
<h2>Comments</h2>
<%= render @article.comments %>
<h2>Add a comment:</h2>
<%= render "comments/form", article: @article%>